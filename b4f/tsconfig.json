{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node", // Risoluzione dei moduli nel formato Node.js
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // Abilita la generazione di file di mappatura sorgente
    "declaration": true, // Abilita la generazione di file di dichiarazione (per librerie)
    "noUnusedLocals": true, // Rileva variabili locali non utilizzate
    "noUnusedParameters": true, // Rileva parametri non utilizzati
    "strictNullChecks": true, // Rileva valori null e undefined in modo pi√π rigoroso
    "baseUrl": ".", // Percorso di base per la risoluzione dei moduli
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    } // Configura i percorsi dei moduli personalizzati
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}